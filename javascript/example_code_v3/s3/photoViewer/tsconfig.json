{
  "compilerOptions": {
    /**
     * Must allow:
     */
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "incremental": true,
    /**
     * Nice to have:
     */
    // "preserveConstEnums": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "test/"],
  "exclude": ["node_modules/", "src/*/build/"]
}
